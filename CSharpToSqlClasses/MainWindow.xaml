<Window x:Class="CSharpToSqlClasses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# To Sql Server Classes - Raphael ATALLAH - 2015" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" AcceptsReturn="True" Name="CSharpTextBox" />
        <TextBox Grid.Row="1
                 " TextWrapping="Wrap" AcceptsReturn="True" Name="SqlServerTextBox" />
        <Button Content="Generate" Grid.Row="2" Name="GenerateButton" Click="GenerateButton_Click" />
        <Label Content="SQL" FontWeight="Bold" HorizontalAlignment="Right"  Grid.Row="1" VerticalAlignment="Bottom"/>
        <Label Content="C#" FontWeight="Bold" HorizontalAlignment="Right"  Grid.Row="0" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
